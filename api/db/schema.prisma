generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model PersonalData {
  id                    BigInt          @id @default(autoincrement())
  name                  String
  familyName            String
  birthdate             DateTime?
  gender                String?
  roleId                Int
  country               String?
  city                  String?
  postalCode            String?
  address               String?
  phoneNumber           String?
  phoneCaretakerContact String?
  userId                String          @unique @db.Uuid
  foundUsBy             String?
  isParent              Boolean?
  created_at            DateTime        @default(now())
  Participation         Participation[]
  role                  SystemRole      @relation(fields: [roleId], references: [id], onDelete: SetDefault)

  @@map("personalDatas")
}

model Participation {
  id                   BigInt             @id @default(autoincrement())
  travelMethod         String?
  participationRoleId  Int?
  accommodation        Boolean?
  startDate            DateTime
  endDate              DateTime
  helpAfterwards       Boolean?
  acceptPhotos         Boolean
  acceptCoC            Boolean
  eventId              Int
  foodChoice           String
  accomodationLocation String?
  userId               String             @db.Uuid
  checkinConfirmed     Boolean?
  created_at           DateTime           @default(now())
  price                Int?
  event                Event              @relation(fields: [eventId], references: [id], onDelete: SetNull)
  participationRole    ParticipationRole? @relation(fields: [participationRoleId], references: [id])
  personalData         PersonalData       @relation(fields: [userId], references: [userId], onDelete: SetNull)

  @@index([userId])
  @@map("participations")
}

model SystemRole {
  id         Int            @id @default(autoincrement())
  desc       String         @unique
  references PersonalData[]

  @@map("systemRoles")
}

model ParticipationRole {
  id         Int             @id @default(autoincrement())
  desc       String          @unique
  references Participation[]

  @@map("participationRoles")
}

model Event {
  id             Int             @id @default(autoincrement())
  name           String          @unique
  desc           String
  endDate        DateTime
  startDate      DateTime
  participations Participation[]

  @@map("events")
}

model Presence {
  id         Int      @id @default(autoincrement())
  userId     String   @db.Uuid
  date       DateTime
  created_at DateTime @default(now())

  @@map("presences")
}
